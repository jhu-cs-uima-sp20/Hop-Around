<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="155dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <EditText
        android:id="@+id/profile_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:editable="false"
        android:text="@string/display_name"
        android:maxLength="15"
        android:textSize="18sp" />


    <ImageButton
        android:id="@+id/edit_display_name_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/profile_photo"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/profile_display_name"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <TextView
        android:id="@+id/hop_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_display_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="8dp"
        android:text="@string/hop_points_profile" />

    <TextView
        android:id="@+id/profile_points_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_display_name"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="163dp"
        android:layout_toEndOf="@+id/hop_points"
        android:text="@string/hop_points_number" />

    <EditText
        android:id="@+id/profile_description"
        android:layout_width="244dp"
        android:layout_height="179dp"
        android:layout_below="@+id/hop_points"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="19dp"
        android:background="@color/colorPrimaryDark"
        android:editable="false"
        android:maxLength="150"
        android:text="@string/filler" />

    <ImageButton
        android:id="@+id/edit_description_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/hop_points"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="54dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <TextView
        android:id="@+id/profile_display_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="200dp"
        android:layout_toEndOf="@+id/display_names"
        android:text="@string/collection_on_profile"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/display_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="200dp"
        android:text="@string/display_name"
        android:textSize="18sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/profile_popup_one"
        android:layout_width="102dp"
        android:layout_height="103dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="50dp"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <ImageView
        android:id="@+id/profile_popup_two"
        android:layout_width="107dp"
        android:layout_height="101dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@+id/profile_popup_one"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <ImageView
        android:id="@+id/profile_popup_three"
        android:layout_width="104dp"
        android:layout_height="101dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@+id/profile_popup_two"
        app:srcCompat="@android:drawable/ic_menu_camera" />


</RelativeLayout>