<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="155dp"
        android:clickable="true"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <EditText
        android:id="@+id/profile_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:editable="true"
        android:maxLength="15"
        android:text="@string/display_name"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/edit_display_name_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/profile_photo"
        android:layout_marginStart="13dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/profile_display_name"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <TextView
        android:id="@+id/disp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_display_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="8dp"
        android:text="@string/hop_points_profile" />

    <TextView
        android:id="@+id/profile_points_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_display_name"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="130dp"
        android:layout_toEndOf="@+id/disp"
        android:text="@string/hop_points_number" />

    <EditText
        android:id="@+id/profile_description"
        android:layout_width="244dp"
        android:layout_height="179dp"
        android:layout_below="@+id/disp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="19dp"
        android:background="@color/colorPrimaryDark"
        android:editable="true"
        android:maxLength="150"
        android:text="@string/filler" />

    <ImageView
        android:id="@+id/edit_description_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/disp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="89dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <TextView
        android:id="@+id/display_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_popup_1"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="142dp"
        android:layout_marginBottom="47dp"
        android:text="@string/display_name"
        android:textSize="18sp"
        android:visibility="visible" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_popup_1"
        android:layout_width="102dp"
        android:layout_height="103dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:layout_toStartOf="@+id/profile_popup_2"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_popup_2"
        android:layout_width="107dp"
        android:layout_height="101dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_popup_3"
        android:layout_width="104dp"
        android:layout_height="101dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="49dp"
        android:layout_toEndOf="@+id/profile_popup_2"
        app:srcCompat="@android:drawable/ic_menu_camera" />


</RelativeLayout>